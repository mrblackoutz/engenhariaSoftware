@startuml
actor "Restaurante" as Restaurante

boundary MesaUI
control MesaController
entity Mesa

== Disponibilizar Mesas ==

Restaurante -> MesaUI: solicitarMesasDisponiveis()
activate MesaUI

MesaUI -> MesaController: solicitarMesasDisponiveis()
activate MesaController

MesaController -> Mesa: findDisponiveis()
activate Mesa
Mesa --> MesaController: listaMesas
deactivate Mesa

MesaController -> MesaUI: exibirMesasDisponiveis(listaMesas)
deactivate MesaController

MesaUI -> Restaurante: mostrarMesasDisponiveis()
activate Restaurante
deactivate Restaurante
deactivate MesaUI
@enduml
